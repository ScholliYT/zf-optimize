@page "/form"
@page "/form/{Id:int}"
@inherits webapp.Pages.EditFormModel

<h1>Form</h1>

@if (LoadFailed)
{
    <h2>Entschuldigung, diese Seite konnte aufgrund eines Fehlers nicht geladen werden.</h2>
}
else if (NotFound)
{
    <h2>Entschuldigung, die Form konnte nicht gefunden werden.</h2>
}
else if (Form == null)
{
    <p><em>Lade...</em></p>
}
else
{
    <h3>@(CreationMode ? "Eintrag hinzufügen" : "Eintrag bearbeiten")</h3>

    <Microsoft.AspNetCore.Components.Forms.EditForm Model="@Form" OnValidSubmit="@Save">
        <DataAnnotationsValidator />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row mb-1">
            <label class="col-sm-3 col-form-label" for="Actions">Actions:</label>
            <div class="col-sm-9">
                <InputNumber Class="form-control" @bind-Value="@Form.Actions" />
            </div>
        </div>
        <div class="form-group row mb-1">
            <label class="col-sm-3 col-form-label" for="ActionsMax">ActionsMax:</label>
            <div class="col-sm-9">
                <InputNumber Class="form-control" @bind-Value="@Form.ActionsMax" />
            </div>
        </div>
        <div class="form-group row mb-1">
            <label class="col-sm-3 col-form-label" for="CastingCells">CastingCells:</label>
            <div class="col-sm-9">
                <InputNumber Class="form-control" @bind-Value="@Form.CastingCells" />
            </div>
        </div>

        <button type="submit">@(CreationMode ? "Hinzufügen" : "Ändern")</button>
    </Microsoft.AspNetCore.Components.Forms.EditForm>
}
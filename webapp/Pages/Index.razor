@page "/"
@using ChartJs.Blazor.Charts
@using ChartJs.Blazor.ChartJS.PieChart
@using ChartJs.Blazor.ChartJS.Common.Properties
@using ChartJs.Blazor.Util
@inherits IndexModel

<div class="columns">
    <div class="column">
    </div>

    <div class="column is-one-third">
        <div class="box">
            <ChartJsPieChart @ref="_pieChartJs" Config="@_config" Width="600" Height="300" />
        </div>

        <div class="box">
            <p class="is-size-1 has-text-centered">@Math.Round(Task.Run(Umsatz).GetAwaiter().GetResult(), 2) €</p>
            <p class="is-size-5 has-text-centered">Umsatz</p>
        </div>
    </div>

    <div class="column is-one-third">
        <div class="box">
            <ChartJs.Blazor.Charts.ChartJsBarChart @ref="_barChart" Config="@_barChartConfig" Width="600" Height="300" />
        </div>

        <div class="box">
            <p class="is-size-1 has-text-centered">@Task.Run(GesamtMenge).GetAwaiter().GetResult()</p>
            <p class="is-size-5 has-text-centered">Gesamtabsatzmenge</p>
        </div>
    </div>

    <div class="column">

    </div>
</div>
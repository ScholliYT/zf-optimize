@page "/forms"
@inherits webapp.Pages.FormsModel

<h1>Formen</h1>

<button @onclick="AddRandomForm">Add Random Form</button>
@if (Forms == null)
{
    <p><em>Lade...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
                <th>ActionsMax</th>
                <th>CastingCells</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var form in Forms)
            {
                <tr>
                    <td>@form.Id</td>
                    <td>@form.Actions</td>
                    <td>@form.ActionsMax</td>
                    <td>@form.CastingCells</td>
                    <td><button @onclick="() => EditForm(form.Id)">Edit</button></td>
                    <td><button @onclick="() => DeleteForm(form)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}